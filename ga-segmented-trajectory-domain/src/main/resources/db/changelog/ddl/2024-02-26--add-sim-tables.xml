<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="2024-01-26--01-add-sim_parameters_table-table" author="Stepan_Klimashin">
        <createTable tableName="sim_parameters_table">
            <column name="id" type="UUID">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="sim_parameters_table_pk"/>
            </column>
            <column name="central_body_name" type="celestial_body_name_type">
                <constraints nullable="false"/>
            </column>
            <column name="celestial_bodies_by_anomalies" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="spacecraft_pos" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="spacecraft_spd" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="spacecraft_mass" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="spacecraft_fuel_mass" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="engine_fuel_consumption" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="engine_thrust" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="control_variations" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="last_calculated_sim_id" type="UUID"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE"
                    defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE"
                    defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2024-01-26--02-add-sim_results-table" author="Stepan_Klimashin">
        <createTable tableName="sim_results">
            <column name="id" type="UUID">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="sim_results_pk"/>
            </column>
            <column name="sim_parameters_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="celestial_bodies_by_anomalies" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="spacecraft_pos" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="spacecraft_spd" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="spacecraft_mass" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="spacecraft_fuel_mass" type="DOUBLE">
                <constraints nullable="false"/>
            </column>
            <column name="control_law" type="VARCHAR">
                <constraints nullable="false"/>
            </column>
            <column name="is_meeting_earth" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
            <column name="e2e_duration" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="apocenter_after_ga" type="DOUBLE"/>
            <column name="created_at" type="TIMESTAMP WITH TIME ZONE"
                    defaultValueComputed="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2024-01-26--03-add-foreign-keys" author="Stepan_Klimashin">
        <addForeignKeyConstraint baseTableName="sim_parameters_table"
                                 baseColumnNames="last_calculated_sim_id"
                                 constraintName="sim_parameters_table_last_calculated_sim_id_sim_results_id_fk"
                                 referencedTableName="sim_results"
                                 referencedColumnNames="id"/>

        <addForeignKeyConstraint baseTableName="sim_results"
                                 baseColumnNames="sim_parameters_id"
                                 constraintName="sim_results_sim_parameters_id_sim_parameters_table_id_fk"
                                 referencedTableName="sim_parameters_table"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>